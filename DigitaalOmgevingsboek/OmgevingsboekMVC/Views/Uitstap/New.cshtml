@model DigitaalOmgevingsboek.Uitstap



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    


                            <!--
                            <input type="submit" name="action:Rechten" value="Beheerrechten" class="btn btn-default firstbutton" />
                            <input type="submit" name="action:Route" value="Route Aanpassen" class="btn btn-default" />
                            <input type="submit" name="action:POI" value="POI Toevoegen" class="btn btn-default" />
                            < class="btn btn-default lastbutton" />
                             -->

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Nieuwe Uitstap</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10">

            </div>
            <div class="col-lg-2">
                <input type="submit" name="action:Save" value="Uitstap Opslaan" class="btn btn-lg btn-success btn-block" />
            </div>
        </div>
       @using (Html.BeginForm())
                {
        @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-12">
                    <ul class="tabs">
                        <li><a href="#view1">Basis Informatie Uitstap</a></li>
                        <li><a href="#view2">Route Bewerken</a></li>
                        <li><a href="#view3">POI Toevoegen</a></li>
                    </ul>
                    <div class="tabcontents">
                        <div id="view1">
                            <div class="panel">

                                <div class="panel-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Naam)
                                        <div>
                                            @Html.EditorFor(model => model.Naam)
                                            @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.POI)
                                            <div class="dataTable_wrapper">
                                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                                    <thead>
                                                        <tr>
                                                            <td>Naam</td>
                                                            <td>Adres</td>
                                                            <td>Gemeente</td>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (POI poi in Model.POI)
                                                    {
                                                            <tr>
                                                                <td>@poi.Naam</td>
                                                                <td>@poi.Adres</td>
                                                                <td>@poi.Gemeente</td>
                                                            </tr>
                                                    }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>


                                    <div class="row">
                                        <div class="col-lg-12">
  
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div id="view2">
                            <div class="panel">

                                <div class="panel-body">
                                    <!-- Voeg hier code voor het beheren van afbeeldingen-->
                                    <div class="row">
                                        <div class="col-lg-6">


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="view3">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>POI Naam</th>
                                            <th>Auteur</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
  
                                    </tbody>
                                </table>

                            </div>
                    </div>
                </div>
            </div>
   
    </div>
       }


    <!-- /.row -->
</div>
</div>