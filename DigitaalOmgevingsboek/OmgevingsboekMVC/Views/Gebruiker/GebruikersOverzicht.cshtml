@model IEnumerable<DigitaalOmgevingsboek.AspNetUsers>

@{
    ViewBag.Title = "Gebruikers";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Gebruikersbeheer</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10">

            </div>
            <div class="col-lg-2">
                <input value="Nieuwe Gebruiker" name="btnSubmit" class="btn btn-lg btn-success btn-block" onclick="@Url.Action("Register","Account")" />
            </div>
        </div>
        <form>
            <div class="row">
                <ul class="tabs">
                    <li><a href="#view1">Features</a></li>
                    <li><a href="#view2">How to Use</a></li>
                    <li><a href="#view3">Source Code</a></li>
                </ul>
                <div class="tabcontents">
                    <div id="view1">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Alle Gebruikers
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Naam Gebruiker</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (AspNetUsers anu in ViewBag.Gebruikers)
                                                {
                                                    <tr class="gradeC">
                                                        <td>@anu.Firstname</td>
                                                        <td>@anu.Name</td>
                                                        <td>@anu.UserName</td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="view2">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Alle Gebruikers
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Naam Gebruiker</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (AspNetUsers anu in ViewBag.Gebruikers)
                                                {
                                                    <tr class="gradeC">
                                                        <td>@anu.Firstname</td>
                                                        <td>@anu.Name</td>
                                                        <td>@anu.UserName</td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
</form>
    </div>
</div>