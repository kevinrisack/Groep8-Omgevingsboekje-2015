@model IEnumerable<DigitaalOmgevingsboek.AspNetUsers>

@{
    ViewBag.Title = "Gebruikers";
}




<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Gebruikersbeheer</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9 col-xs-9">

            </div>
            @*<div class="col-lg-3 col-xs-3">
                <input value="Nieuwe Gebruiker" name="btnSubmit" class="btn btn-lg btn-success btn-block" onclick="@Url.Action("Register","Account")" />
            </div>*@
        </div>
        <form>
            <div class="row">
                <div class="col-lg-12">

                
                    <ul class="tabs" data-persist="true">
                        <li><a href="#view1">Alle Gebruikers</a></li>
                        <li><a href="#view2">Aanvragen</a></li>
                        <li><a href="#view3">Verwijderde gebruikers</a></li>

                    </ul>
                <div class="tabcontents">
                    <div id="view1">
                       
                            <div class="panel">
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Voornaam</th>
                                                    <th>Naam</th>
                                                    <th>Gebruikersnaam</th>
                                                    <th>Actie</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (AspNetUsers anu in ViewBag.Gebruikers)
                                                {
                                                    if ((anu.IsPending == false) && (anu.IsDeleted==false) && (anu.UserName!=User.Identity.Name))
                                                    {
                                                    <tr class="gradeC">
                                                        <td>@anu.Firstname</td>
                                                        <td>@anu.Name</td>
                                                        <td>@anu.UserName</td>
                                                        <td>@Html.ActionLink("Verwijderen","Verwijderen",anu,new { onclick = "return confirm('Gebruiker verwijderen?')" })</td>
                                                    </tr>}

                                                }



                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                    <div id="view2">
                    
                            <div class="panel">
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Voornaam</th>
                                                    <th>Naam</th>
                                                    <th>Gebruikersnaam</th>
                                                    <th>Actie</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (AspNetUsers anu in ViewBag.Gebruikers)
                                                {
                                                    if (anu.IsPending == true)
                                                    {
                                                        <tr class="gradeC">
                                                            <td>@anu.Firstname</td>
                                                            <td>@anu.Name</td>
                                                            <td>@anu.UserName</td>
                                                            <td>@Html.ActionLink("Toestaan","Toestaan",anu) | @Html.ActionLink("Weigeren", "Weigeren", anu, new { onclick = "return confirm('Gebruiker weigeren?')" })</td>
                                                
                                                        </tr>}

                                                }



                                            </tbody>
                                        </table>
                                    </div>
                          
                            </div>
                        </div>
                    </div>

                    <div id="view3">

                        <div class="panel">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Voornaam</th>
                                                <th>Naam</th>
                                                <th>Gebruikersnaam</th>
                                                <th>Actie</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (AspNetUsers anu in ViewBag.Gebruikers)
                                            {
                                                if (anu.IsDeleted==true)
                                                {
                                                    <tr class="gradeC">
                                                        <td>@anu.Firstname</td>
                                                        <td>@anu.Name</td>
                                                        <td>@anu.UserName</td>
                                                        <td>@Html.ActionLink("Activeren", "Activeren", anu, new { onclick = "return confirm('Account terug activeren?')" })</td>

                                                    </tr>}

                                            }



                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                    </div>
                    </div>
                </div>
</form>
        <div class="row">
            <div id="Howest">
                <img src="/Backgrounds/Howest_Logo.png" />
            </div>
        </div>
    </div>
</div>