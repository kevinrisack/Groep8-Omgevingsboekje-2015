    <script>
        function setCookie() {
            var x = document.cookie;
            console.log("Koeksjes" + x);
            var mySplitResult = x.split(";");
            console.log("Arraytjes" + mySplitResult);
            for (i = 0; i < mySplitResult.length; i++) {

                    document.cookie = mySplitResult[i]+"; expires=Thu, 01 Jan 1970 00:00:00 UTC";
           
            }
        }
    </script>
