@model IEnumerable<DigitaalOmgevingsboek.POI>

@{
    ViewBag.Title = "POIOverzicht";
}





<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">POI Overzicht</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                        
                            <!-- /.panel-heading -->
                            <div class="panel-body">

                                <form action="">
                                    <div class="form-group">
                                        <label>Zoek: </label>
                                        <input type="text" name="search" id="search" class="form-control" placeholder="Geef hier uw zoekterm in"><br>
                                    </div>
                                    <div class="form-group">
                                        <label>Doelgroep:</label>
                                        <select class="form-control" name="Doelgroep">
                                            @foreach (Doelgroep dg in ViewBag.Doelgroepen)
                                            {
                                                <option>@dg.DoelgroepNaam</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Leerdoel:</label>
                                        <select class="form-control" name="Leerdoel">
                                            @foreach (Leerdoel ld in ViewBag.Leerdoelen)
                                            {
                                                <option>@ld.LeerdoelNaam</option>
                                            }
                                        </select>
                                    </div>

                                </form>
                                <br />
                
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.Naam)</th>
                                                <th>Adres</th>
                                                <th>@Html.DisplayNameFor(model => model.Gemeente)</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink(item.Naam, "POIView", new { id = item.Id })
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Adres)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Gemeente)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Wijzig", "POIModify", new { id = item.Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.container-fluid -->
                    </div>
                </div>
        </div>
</div>


            <script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
            </script>



