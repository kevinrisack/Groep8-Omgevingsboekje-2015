@{
    ViewBag.Title = "POIStart";
}



<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">POI Overzicht</h1>


    <div class="content">

        <div class="searchPOI">

           
            <input type="button" name="btnSearch" value="Bekijk alle POI's'" onclick="location.href='@Url.Action("POIOverzicht", "POI")'" />


        </div>
        <div class="themaPOI">
            Thema: <br />
            <ul class="themaPOI">
                @foreach (Thema th in ViewBag.Themas)
                {
                    <li>@Html.ActionLink(th.ThemaNaam, "POIOverzicht", new { themaId = th.Id })</li>
                }
            </ul>
        </div>
        <div class="doelgroepPOI">
            Doelgroep: <br />
            <ul class="doelgroepPOI">
                @foreach (Doelgroep dg in ViewBag.Doelgroepen)
                {
                    <li>@Html.ActionLink(dg.DoelgroepNaam, "POIOverzicht", new { doelgroepId = dg.Id })</li>
                }
            </ul>
        </div>

    </div>
</div>
