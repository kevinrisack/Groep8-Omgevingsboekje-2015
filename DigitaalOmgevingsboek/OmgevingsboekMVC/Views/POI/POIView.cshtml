@model POI
@{
    ViewBag.Title = "POIView";
}
@section Scripts {
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBUZf7MRVjw-VXzWpeicvuZ1WmsbpVjha0"></script>
    <script>
        var geocoder;
        var map;

        function initialize() {
            geocoder = new google.maps.Geocoder();
            var mapOptions = {
                center: { lat: 50.83, lng: 3.26 },
                zoom: 8
            };
            map = new google.maps.Map(document.getElementById('map-canvas'),
                    mapOptions);



        }
        google.maps.event.addDomListener(window, 'load', initialize);

        function codeAddress() {
            var address = "@Html.DisplayFor(model => model.Adres)+' '+ @Html.DisplayFor(model => model.Gemeente)";
            geocoder.geocode({ 'address': address }, function (results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    map.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: map,
                        position: results[0].geometry.location
                    }); map.setZoom(14);
                } else {
                    alert('Geocode was not successful for the following reason: ' + status);
                }
            });
        }
        google.maps.event.addDomListener(window, 'load', codeAddress);

    </script>

}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">@Html.DisplayFor(model => model.Naam)</h1>




    <div class="content">
        <form action="">
            <div class="POIViewTop">
                <div class="POIViewLeft">

                    <div class="DivViewClear"><label for="adres">Adres: </label><p> @Html.DisplayFor(model => model.Adres)</p></div>

                    <div class="DivViewClear"><label for="gemeente">Gemeente: </label><p> @Html.DisplayFor(model => model.Gemeente)</p></div>

                    <div class="DivViewClear"><label for="telefoon">Tel.: </label> <p>@Html.DisplayFor(model => model.Telefoon)</p></div>

                    <div class="DivViewClear"><label for="email">E-mail: </label> <p>@Html.DisplayFor(model => model.Email)</p></div>

                    <div class="DivViewClear"><label for="website">Website: </label> <p>@Html.DisplayFor(model => model.WebsiteUrl)</p></div>

                    <div class="DivViewClear"><label for="beschrijving">Beschrijving: </label> <p> @Html.DisplayFor(model => model.Beschrijving)</p></div>

                    <div class="DivViewClear">
                        <label for="openingsuren">Openingsuren: </label><p> @Html.DisplayFor(model => model.Openingsuur)</p>
                    </div>
                    <div>

                        <div class="DivViewClear"> <label id="Tijdsduur" for="tijdsduur">Tijdsduur: </label> <p>@Html.DisplayFor(model => model.Duurtijd)</p></div>

                        <div class="DivViewClear"><label for="toegangsprijs">Toegangsprijs: </label> <p>@Html.DisplayFor(model => model.Toegangsprijs)</p></div>

                        <div class="DivViewClear"><label id="Doelgroep">Doelgroep:</label> <p>Jaja een zeer mooie doelgroep dat is zeker , je weet wat ze zeggen liever een aap in de hand dan 10 aan je banaan.</p> <br /> </div>
                    </div>
                </div>
                <div class="POIViewRight">

                    <br />
                    <label>Afbeeldingen</label>
                    <br />
                    <div class="POIViewAfbeeldingen">
                        <!-- Voeg hier code voor het beheren van afbeeldingen-->
                        
                        @foreach(Foto_POI foto in Model.Foto_POI){
                            <img src="https://omgevingsboek.blob.core.windows.net/images/@foto.FotoURL" alt="Foto POI" height="90px" />
                        }
                    </div>

                    <br />
                    <label>Google Maps</label>
                    <br />
                    <div class="POIViewGoogleMaps" id="map-canvas">
                        <!-- Voeg hier code voor het beheren van afbeeldingen-->
                        Google Maps
                    </div>

                </div>




            </div>

            <div class="POIViewBody">
                <br />
                <label>Activiteiten</label>
                <br />
                <div class="POIViewActivity">
                    <!-- Voeg hier code voor het weergeven van activities-->
                    Activity
                </div>
                <br />
                <label>Plaats Reactie:</label>
                <div class="POIViewPlaatsReactie">
                    <!-- Voeg hier code voor het weergeven van het plaatsreactie venster-->
                    Plaats Reactie
                </div>
                <br />
                <label>Reacties:</label>
                <div class="POIViewReacties">
                    <!-- Voeg hier code voor het weergeven van reacties-->
                    Reacties
                </div>
                <br />

            </div>

        </form>
    </div>
</div>

