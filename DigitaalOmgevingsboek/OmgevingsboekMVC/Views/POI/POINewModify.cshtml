
@model POI
@{
    ViewBag.Title = "POINewModify";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">POI Bewerken</h1>




    <div class="content">
        <form action="">
        <div class="POINewTop">
            <div class="POINewLeft">
                <label for="naam">Naam: </label> @Html.EditorFor(model => model.Naam)
                <br/>
                <label for="adres">Adres: </label> @Html.EditorFor(model => model.Adres)
                <br />
                <label for="gemeente">Gemeente: </label> @Html.EditorFor(model => model.Gemeente)
                <br />
                <label for="telefoon">Tel.: </label> @Html.EditorFor(model => model.Telefoon)
                <br />
                <label for="email">E-mail: </label> @Html.EditorFor(model => model.Email)
                <br />
                <label for="website">Website: </label> @Html.EditorFor(model => model.WebsiteUrl)
                <br />
                <label for="beschrijving">Beschrijving: </label> @Html.TextAreaFor(model => model.Beschrijving)
            </div>
            <div class="POINewRight">
                <div>
                    <label for="openingsuren">Openingsuren: </label> @Html.TextAreaFor(model => model.Openingsuur)
                </div>
                <div>
                    <br />
                    <label id="Tijdsduur" for="tijdsduur">Tijdsduur: </label> @Html.EditorFor(model => model.Duurtijd)
                    <br />
                    <label for="toegangsprijs">Toegangsprijs: </label> @Html.EditorFor(model => model.Toegangsprijs)
                    <br />
                    <label id="Doelgroep">Doelgroep:</label> <br />
                    <fieldset>

                        @foreach (Doelgroep dg in ViewBag.Doelgroepen)
                        {
                            <div class="checkDoelgroep">
                                <input type="checkbox" id="@dg.Id" name="@dg.DoelgroepNaam" value="@dg.Id" />
                                <label for="@dg.Id">@dg.DoelgroepNaam</label>
                            </div>
                        }
                    </fieldset>
                </div>

             
            </div>
        </div>
      
        <div class="POINewBody">
            <br />
            <label>Afbeeldingen</label>
            <br />
            <input type="text" name="url" id="url" /><input type="button" name="btnBrowse" value="..." /><input type="button" name="btnUploaden" value="Uploaden" />
            <br />

            <div class="POINewAfbeeldingen">
                <!-- Voeg hier code voor het beheren van afbeeldingen-->
                Afbeelding
            </div>
            <br />
            <label>Activiteiten</label><label id="NewActivity"><a href="@Url.Action("POIActivity", "POI")">Nieuwe Activiteit</a></label>
            <br />
            <div class="POINewActivity">
                <!-- Voeg hier code voor het beheren van activiteiten-->
                Activity
            </div>
            <br />
            <label>Thema's:</label>
            <br />
            <br/>
            <fieldset>

                @foreach (Doelgroep dg in ViewBag.Doelgroepen)
                {
                    <div class="checkDoelgroep">
                        <input type="checkbox" id="@dg.Id" name="@dg.DoelgroepNaam" value="@dg.Id" />
                        <label for="@dg.Id">@dg.DoelgroepNaam</label>
                    </div>
                }
            </fieldset>
            <br />
            <br />
            <input type="button" value="Opslaan Wijzigingen" name="btnSubmit" id="btnSubmitPOINew" />


        </div>

        <div id="POINewFooter">&nbsp;</div>
        </form></div>
</div>

