@using OmgevingsboekMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Inlogpagina</h3>
                </div>
                <div class="panel-body">
                    <fieldset>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        <div>
            @Html.TextBoxFor(m => m.Email, "", new { @class="form-control"})
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Wachtwoord</label>
        <div>
            @Html.PasswordFor(m => m.Password, new { @class= "form-control"})
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
    
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                  Aangemeld blijven
                </label>

            
        </div>
    </div>
    <div class="form-group">
      
            <input type="submit" value="Aanmelden" class="btn btn-lg btn-success btn-block" />
   
    </div>
    <p>
        @Html.ActionLink("Account aanmaken", "Register")
    </p>

    @* Enable this once you have account confirmation enabled for password reset functionality*@
        <p>
            @Html.ActionLink("Wachtwoord vergeten?", "ForgotPassword")
        </p>
}
</fieldset>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="Howest">
                <img src="/Backgrounds/Howest_Logo.png" />
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}