
@{
    ViewBag.Title = "POINewModify";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2 class="page-header">POI Bewerken</h2>




    <div class="content2">
        <form action="">
        <div class="POINewTop">
            <div class="POINewLeft">
                <label for="naam">Naam: </label>
                <input type="text" name="naam" id="naam" value=""> 
                <br/>
                <label for="adres">Adres: </label>
                <input type="text" name="adres" id="adres" value=""> 
                <br />
                <label for="gemeente">Gemeente: </label>
                <input type="text" name="gemeente" id="gemeente" value=""> 
                <br />
                <label for="telefoon">Tel.: </label>
                <input type="text" name="telefoon" id="telefoon" value=""> 
                <br />
                <label for="email">E-mail: </label>
                <input type="text" name="email" id="email" value=""> 
                <br />
                <label for="website">Website: </label>
                <input type="text" name="website" id="website" value=""> 
                <br />
                <label for="beschrijving">Beschrijving: </label>
                <textarea id="beschrijving" rows="10"></textarea>
            </div>
            <div class="POINewRight">
                <label id="openingsuren" for="openingsuren">Openingsuren: </label>
                <textarea id="openingsuren" rows="5"></textarea>
                <br />
                <br />
                <br />
                <br />
       
                <br />
                <label for="tijdsduur">Tijdsduur: </label>
                <input type="text" name="tijdsduur" id="tijdsduur" value="">
                <br />
                <label for="toegangsprijs">Toegangsprijs: </label>
                <input type="text" name="toegangsprijs" id="toegangsprijs" value="">
                <br />
                <label>Doelgroep:</label> <br />
                <fieldset>
                   
                   <input type="checkbox" name="blah1" id="blah1" /><label for="blah1"> Doelgroep 1</label>
                    <input type="checkbox" name="blah2" id="blah2" /><label for="blah2"> Doelgroep 2</label>
                    <input type="checkbox" name="blah3" id="blah3" /><label for="blah3"> Doelgroep 3</label>
                    <input type="checkbox" name="blah4" id="blah4" /><label for="blah4"> Doelgroep 4</label>
                    <input type="checkbox" name="blah5" id="blah5" /><label for="blah5"> Doelgroep 5</label>
                    <input type="checkbox" name="blah6" id="blah6" /><label for="blah6"> Doelgroep 6</label>
                    <input type="checkbox" name="blah7" id="blah7" /><label for="blah7"> Doelgroep 7</label>
                    <input type="checkbox" name="blah8" id="blah8" /><label for="blah8"> Doelgroep 8</label>
                </fieldset>
                   

             
            </div>
        </div>
      
        <div class="POINewBody">
            <br/>
            <label>Afbeeldingen</label>
            <br />
            <input type="text" name="url" id="url" /><input type="button" name="btnBrowse" value="..." /><input type="button" name="btnUploaden" value="Uploaden" />
            <br />

            <div class="POINewAfbeeldingen">
                <!-- Voeg hier code voor het beheren van afbeeldingen-->
                Afbeelding
            </div>
            <br />
            <label>Activiteiten</label><label id="NewActivity"><a href="@Url.Action("POIActivity", "POI")">Nieuwe Activiteit</a></label>
            <br />
            <div class="POINewActivity">
                <!-- Voeg hier code voor het beheren van activiteiten-->
                Activity
            </div>


        </div>
        </form></div>
</div>

