@model IEnumerable<DigitaalOmgevingsboek.POI>

@{
    ViewBag.Title = "POIOverzicht";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">POI Overzicht</h1>


    <div class="content">

        <div class="zoekPOI">
            <form action="">
                <label for="search">Zoek: </label>
                <input type="text" name="search" id="search" value=""><br>
                Doelgroep:
                <br/>
                Leerdoel:
                <br/>

            </form>
        </div>

        <div class="lijstPOI">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Naam)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gemeente)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr >
                        <td>
                            <a href="@Html.ActionLink("Details", "Details", new { id = item.Id })">
                               @Html.DisplayFor(modelItem => item.Naam)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gemeente)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>



    </div>
</div>

